<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bottom_bg">

    <com.example.myapplication.view.HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bottom_second" />

            <ImageView
                android:layout_width="290dp"
                android:layout_height="260dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_yest_bg"
                android:padding="50dp"
                android:src="@drawable/ic_yest" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bottom_second" />
            <ImageView
                android:layout_width="290dp"
                android:layout_height="260dp"
                android:background="@drawable/ic_now_bg"
                android:padding="50dp"
                android:src="@drawable/ic_now"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bottom_second" />
            <ImageView
                android:layout_width="290dp"
                android:layout_height="260dp"
                android:background="@drawable/ic_tow_bg"
                android:padding="50dp"
                android:src="@drawable/ic_tow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </com.example.myapplication.view.HorizontalScrollView>
</RelativeLayout>